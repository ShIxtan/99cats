

<% if @cat_rental_request.persisted? %>
  <% url = cat_rental_request_url(@cat_rental_request) %>
<% else %>
  <% url = new_cat_rental_request_url %>
<% end %>

<form action=<%=url %> method="post">
  <%= render 'layouts/auth_token' %>
  <input type="hidden" name="_method" value=<%= "PATCH" if @cat_rental_request.persisted? %>>

  <label for="cat">Cat Name</label>
  <select name="cat_rental_request[cat_id]" id="cat">
    <option value="" selected >----</option>
      <% Cat.all.each do |cat| %>
        <option value="<%= cat.id %>" <%= "selected" if cat.id == @cat_rental_request.cat_id %>><%= cat.name %></option>
      <% end %>
  </select>
  <br>

  <label for="start_date">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" id="start_date" value="<%= @cat_rental_request.start_date %>">
  <br>


  <label for="end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" id="end_date" value="<%= @cat_rental_request.end_date %>">
  <br>
  <br>

  <input type="submit" value="Save">

</form>
<br>

<%= link_to "All Requests", cat_rental_requests_url %>
